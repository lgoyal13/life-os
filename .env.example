# Life OS Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API
GOOGLE_API_KEY=your-gemini-api-key-here

# Google Cloud credentials
GOOGLE_CREDENTIALS_PATH=./credentials.json
GOOGLE_OAUTH_CREDENTIALS_PATH=./oauth_credentials.json

# Google Sheet ID (from the URL: docs.google.com/spreadsheets/d/{THIS_PART}/edit)
GOOGLE_SHEET_ID=your-sheet-id-here

# Google Calendar ID
# IMPORTANT: For service accounts, use your email address (not "primary")
# "primary" refers to the service account's calendar, not yours
GOOGLE_CALENDAR_ID=your-email@gmail.com

# Email for daily briefs (Gmail SMTP)
RECIPIENT_EMAIL=your-email@gmail.com
GMAIL_ADDRESS=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here
# Get app password at: https://myaccount.google.com/apppasswords

# Your timezone (for scheduling)
TIMEZONE=America/Los_Angeles
